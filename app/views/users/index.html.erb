<h2>Users</h2>

<table table class="table table-bordered">
  <tr>
    <th>Email</th>
	<th>User Type</th>
	<th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
   	<td><%= user.person_type if user.person %></td>
	<td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>

</table>



